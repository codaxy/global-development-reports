{
  "rules": {
    "reports": {
      ".read": true,
      ".indexOn": [
        "public",
        "userId"
      ],
      "$uid": {
        ".write": "data.child('id').val() == null || data.child('userId').val() === auth.uid"
      }
    },
    "users": {
      "$uid": {
        ".read": "$uid == auth.uid",
        ".write": "$uid == auth.uid"
      }
    },
    "stars": {
      "$rid": {
        ".read": true,
        "$uid": {
          ".write": "$uid == auth.uid"
        }
      }
    },
    "gallery": {
      ".read": true,
      ".write": true,
      ".indexOn": [
        "starCount"
      ]
    }
  }
}
